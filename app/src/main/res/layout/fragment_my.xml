<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.MyFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150.0dip"
            android:orientation="horizontal"
            android:background="@drawable/bg_me_header">

            <ImageView
                android:id="@+id/mUserIconIv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_default_user" />

            <TextView
                android:id="@+id/mUserNameTv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/common_white"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="登录/注册" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/mWaitPayOrderTv"
                android:text="待付款"
                android:drawableTop="@drawable/icon_order_wait_pay"
                style="@style/MeOrderLabelStyle" />

            <TextView
                android:id="@+id/mWaitConfirmOrderTv"
                android:text="待收货"
                android:drawableTop="@drawable/icon_order_wait_confirm"
                style="@style/MeOrderLabelStyle" />

            <TextView
                android:id="@+id/mCompleteOrderTv"
                android:text="已完成"
                android:drawableTop="@drawable/icon_order_completed"
                style="@style/MeOrderLabelStyle" />

            <View style="@style/DividerFixedWidth" />

            <TextView
                android:id="@+id/mAllOrderTv"
                android:text="我的订单"
                android:drawableTop="@drawable/icon_order"
                style="@style/MeOrderLabelStyle" />
        </LinearLayout>

        <TextView
            android:id="@+id/mAddressTv"
            android:background="@drawable/border_all"
            android:layout_marginTop="@dimen/common_margin"
            android:text="收货管理"
            android:drawableLeft="@drawable/icon_address"
            style="@style/MeItemStyle" />

        <TextView
            android:id="@+id/mShareTv"
            android:text="分享"
            android:drawableLeft="@drawable/icon_share"
            style="@style/MeItemStyle" />

        <TextView
            android:id="@+id/mSettingTv"
            android:text="设置"
            android:drawableLeft="@drawable/icon_setting"
            style="@style/MeItemStyle" />
    </LinearLayout>
</layout>