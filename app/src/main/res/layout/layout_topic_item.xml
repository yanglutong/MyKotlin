<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/common_white"
        app:cardCornerRadius="6dp"
        app:cardElevation="2.0dip">
    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.yang.mykotlin.utils.RoundRectImageView
                android:id="@+id/mTopicIv"
                android:layout_width="200.0dip"
                android:layout_height="120.0dip"
                android:scaleType="centerCrop"/>
        <TextView android:textColor="@color/text_light_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:layout_marginLeft="5dp"
                  android:layout_marginTop="5dp"
                  android:text="爱生活"/>
        <TextView android:textSize="12dp"
                  android:textColor="@color/text_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:layout_marginLeft="5dp"
                  android:text="有品有范有时尚"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
